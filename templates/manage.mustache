{{!
    @template local_student/manage
    Example context (json):
    {
    }
}}

<h1>Hello World</h1>
<a onclick="location.href='{{ add_url }}'" class="btn btn-success"
  >Add a new student
</a>

<h4 class="mt-4">List of Student</h4>
<ul class="list-group">
  {{#student}}
  <li class="list-group-item">
    <div class="row">
      <span class="col-1 text-right"> {{ id }}. </span>
      <span class="col-5 text-left">
        <strong>{{ name }}</strong>
      </span>
      <span class="col-6 text-center">
        <a
          href="#"
          class="btn btn-outline-primary mr-1"
          onclick="location.href='{{ update_url }}?id={{ id }}'"
          >Edit</a
        >
        <a
          href="#"
          class="btn btn-outline-danger mr-1"
          onclick="location.href='{{ delete_url }}?id={{ id }}'"
          >Delete</a
        >
      </span>
    </div>
  </li>
  {{/student}}
</ul>
